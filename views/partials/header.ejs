<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>HotelFinder</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
		 <script src="https://js.stripe.com/v3/"></script>
	</head>
	<body>
		
<nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div clas="navbar-header">
			<a class="navbar-brand" href="/"><strong class="Hotel">Hotel<span class="Finder">Finder</span></strong></a>
		</div>
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<%if(!currentUser){%>
				<li><a href="/login">Login</a></li>
				<li><a href="/register">Sign Up</a></li>
				<%} else{%>
					<%if(currentUser.isAdmin){%>
					<li><a href="#"><Strong>Admin Account</Strong></a></li>
					<%}%>
					<%if(currentUser.isPaid){%>
					<li><a href="#"><Strong>Premium Account</Strong></a></li>
					<%}else{%>
						
					<li><a href="/checkout"><Strong>Get a Premium Account</Strong></a></li>

					<%}%>
				
				<li><a>Signed in as <%=currentUser.username%></a></li>
				<li><a href="/contact">Contact us</a></li>
				<li><a href="/logout">Logout</a></li>
				<%}%>
			</ul>
		</div>
	</div>
</nav>
	<%if(error && error.length>0){%>
		<div class="container">
			<div class="alert alert-danger">
			<%=error%>
			</div>
		</div>
	<%}%>
		<% if(success && success.length > 0){ %>
		<div class="container">
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
		</div>
        <% } %>
